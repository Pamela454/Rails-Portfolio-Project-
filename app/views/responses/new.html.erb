<div class="container">
  <div class="page-header">
<%= form_for @response, url: {action: "create"}, html: {class: "form-control"} do |f| %>
<% if @response.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @response.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<h2>New Response</h2>
 </div>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
<div class="field<%= ' field_with_errors' if @response.errors[:response].any? %>">    
    <%= f.label :response %><br>
    <%= f.text_field :response, :class => "span5" %></div><br><br>

<div class="form-group">
    <%= f.hidden_field :message_id, value: @message.id, :class => "span5" %></div><br><br>

<div class="form-group">
    <%= f.hidden_field :category_ids, value: @message.category_ids, :class => "span5" %></div><br><br>

<div class="form-group">
    <%= f.hidden_field :physician_id, value: current_user.id, :class => "span5" %></div><br><br>

<div class="actions">
    <%= f.submit class: "btn btn-primary" %><br><br>
</div><br>

<% end %>

 </table>
</div>
