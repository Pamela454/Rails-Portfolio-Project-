<style>
body {
	background-color: rgb(204, 229, 255) !important;
      background-repeat: no-repeat;
  } 
</style>

<div class="container-fluid welcome">
<div class="row d-flex justify-content-center align-items-center">
 <div class="col-12 col-md-8 col-lg-6 col-xl-5">
 <div class="card-body p-5 text-center">


<%= form_for @response, :url => {:controller => 'responses', :action => 'create'} do |f| %>
 <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
  <div class="col sign-in card-title card-body">
    <h4 class="fw-bold mb-2 text">New Response</h4>

<div class="field<%= ' field_with_errors' if @response.errors[:response].any? %>">    
    <%= f.label :response %>
    <%= f.text_field :response, :class => "form-control form-control-lg" %></div>

<div class="form-group">
    <%= f.hidden_field :message_id, value: @message.id, :class => "form-control form-control-lg" %></div>

<div class="form-group">
    <%= f.hidden_field :category_ids, value: @message.category_ids, :class => "form-control form-control-lg" %></div>

<div class="form-group">
    <%= f.hidden_field :physician_id, value: current_user.id, :class => "form-control form-control-lg" %></div>

<div class="actions">
    <%= f.submit class: "btn btn-outline-light btn-lg px-5" %>
</div>

</div>
</div>

<% end %>

  </div>
  </div>
  </div>
  </div>
