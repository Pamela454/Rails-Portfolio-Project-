<style>
  body {
  	    background-color: rgb(204, 229, 255) !important;
        background-repeat: no-repeat;
    }
</style>
<div class="container-fluid welcome">
  <div class="card-body p-5 text-center" style="border-radius: 1rem;">
    <%= form_for @response, :url => {:controller => 'responses', :action => 'update'} do |f| %>
      <h2 class="fw-bold mb-2 text">Edit Response</h2>
      <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
        <div class="container">
          <div class="col sign-in card-title card-body text-alignment">
            <div class="form-group<%= ' field_with_errors' if @response.errors[:response].any? %>">
              <%= f.label :response %>
              <%= f.text_field :response, value: @response.response, :class => "form-control form-control-lg" %></div>
            <div class="actions">
              <%= f.submit class: "btn btn-outline-light btn-lg px-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
