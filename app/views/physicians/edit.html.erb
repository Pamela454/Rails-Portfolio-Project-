<style>
body {
	    background-color: rgb(204, 229, 255) !important;
      background-repeat: no-repeat;
  } 
</style>

<div class="container-fluid">
<div class="card-body p-5 text-center" style="border-radius: 1rem;">
<%= form_for @user, :url => {:controller => 'users', :action => 'update'} do |f| %>  

<div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
<div class="col sign-in card-title card-body text-alignment">

<h4 class="fw-bold mb-2 text">Edit Your Profile</h4>

<div class="form-group">
  <%= f.label :email %>
  <br>
  <%= f.text_field :email, value: @user.email, :class => "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, value: @user.password_digest, :class => "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, value: @user.name, :class => "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= f.label :npi %>
  <%= f.number_field :npi, :class => "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= f.label :specialty %>
  <%= f.text_field :specialty, :class => "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= f.hidden_field :user_type, value: "Physician", :class => "form-control form-control-lg" %>
</div>

<div class="actions"> 
  <%= f.submit class: "btn btn-outline-light btn-lg px-5" %>
</div>

</div>
</div>

<% end %>

</div>
</div>
