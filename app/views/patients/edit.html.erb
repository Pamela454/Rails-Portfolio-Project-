<style>
  body {
  	    background-color: rgb(204, 229, 255) !important;
        background-repeat: no-repeat;
        margin-top: 275px;
    }
</style>
<div class="container-fluid welcome">
  <div class="card-body p-5 text-center" style="border-radius: 1rem;">
    <%= form_for @user, :url => {:controller => 'users', :action => 'update'} do |f| %>
      <div class="row mb-5 justify-content-center">
        <div class="card text-alignment" style="border-radius: 1rem; width: 50%">
          <div class="card-body">
            <p class="card-text">
              <h4 class="fw-bold mb-2 text">Edit Your Profile</h4>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, value: @user.email, :class => "form-control form-control-lg" %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, value: @user.password_digest, :class => "form-control form-control-lg" %>
              </div>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, value: @user.name, :class => "form-control form-control-lg" %>
              </div>
              <div class="form-group">
                <%= f.hidden_field :user_type, value: "Patient", :class => "form-control form-control-lg" %>
              </div>
              <div class="actions">
                <%= f.submit class: "btn btn-outline-dark btn-lg px-5" %>
              </div>
            <% end %>
          </p>
        </div>
      </div>
    </div>
