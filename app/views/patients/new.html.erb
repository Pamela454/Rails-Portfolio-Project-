<style>
  body {
  background-image: url('<%= asset_path 'camilo-jimenez-vGu08RYjO-s-unsplash.jpg' %>');
  background-size: cover;
  }
  .center {
    justify-content: center;
  }
  .navbar-custom {
    background-color: #D8DEEE;
    border: 0;
    padding: 0;
    margin: 0;
  }
  .outside {
    margin-top: 100px;
    padding-top: 10px;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
    #background-color: #D8DEEE;
  }     

</style>

<div class="container-fluid mx-auto text-nowrap text-dark" style="width: 800px;">
 <div class="form-control outside">
  <%= form_with model: @user do |f| %>  <!--form for authorization -->
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

          <div class="mb-3">
              <div class="form-group">
                <h4>Please Enter the  Following Info to Create a New Patient Account</h4>
              </div>
          </div>

          <div class="mb-3">
           <div class="form-group">
            <div class="form-label field<%= ' field_with_errors' if @user.errors[:email].any? %>">
              <%= f.label :email %>
              <br>
              <%= f.text_field :email, value: @user.email, :class => "form-control" %>
            </div>
           </div>
          </div>

          <div class="mb-3">
           <div class="form-group">
            <div class="form-label field<%= ' field_with_errors' if @user.errors[:password].any? %>">
              <%= f.label :password %>
              <br>
              <%= f.password_field :password, value: @user.password_digest, :class => "form-control" %>
            </div>
           </div>
          </div>

          <div class="mb-3">
           <div class="form-group">
            <div class="form-label field<%= ' field_with_errors' if @user.errors[:name].any? %>">
              <%= f.label :name %>
              <br>
              <%= f.text_field :name, value: @user.name, :class =>  "form-control" %>
            </div>
           </div>
          </div>


           <div class="mb-3">
            <div class="form-group">
              <br>
              <%= f.hidden_field :type, value: "Patient", class: "form-control" %>
            </div>
           </div>

            <div class="actions"> <!-- uses update post -->
              <%= f.submit class: "btn btn-primary" %>
            </div>
      <% end %>
  </div>
</div>
