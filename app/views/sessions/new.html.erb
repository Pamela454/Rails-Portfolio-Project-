 <style>
      body {
      background-image: url('<%= asset_path 'camilo-jimenez-vGu08RYjO-s-unsplash.jpg' %>');
      background-size: cover;
      }
      .center {
        justify-content: center;
      }
      .navbar-custom {
        background-color: #D8DEEE;
        border: 0;
        padding: 0;
        margin: 0;
      }
      .sign-in {
        border: 0;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
        background-color: #D8DEEE;
      }
      .card-signin .card-title {
        margin-bottom: 2rem;
        font-weight: 300;
        font-size: 1.5rem;
      }
      .card-signin .card-body {
        padding: 2rem;
      }

</style>

 <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
  <div class="col sign-in card-title card-body">
  <table class="table table-striped">
    <thead>
      <tr>
<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>  <!--form for authorization -->
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="field<%= ' field_with_errors' if @user.errors[:email].any? %>">
  <%= f.label :email %>
  <br>
  <%= f.text_field :email, :class => "span5" %>
</div>
<br>

<div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, :class => "span5" %>
</div>
<br>

<div class="field<%= ' field_with_errors' if @person.errors[:name].any? %>">
  <%= f.label :npi %>
  <br>
  <%= f.number_field :npi, :class => "span5" %>
</div>
<br>

<div class="field<%= ' field_with_errors' if @person.errors[:name].any? %>">
  <%= f.label :specialty %>
  <br>
  <%= f.text_field :specialty, :class => "span5" %>
</div>
<br>

<div class="field<%= ' field_with_errors' if @person.errors[:name].any? %>">
  <%= f.label :user_type %>
  <br>
  <%= f.text_field :user_type, :class => "span5" %>
</div>
<br>

<div class="actions"> <!-- uses update post -->
  <%= f.submit class: "btn btn-primary" %>
</div>
<br>
<% end %>

 </table>
</div>
</div>
