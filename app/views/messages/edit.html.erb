<style>
body {
	    background-color: rgb(204, 229, 255) !important;
      background-repeat: no-repeat;
  } 
</style>

<div class="container-fluid welcome">
  <div class="card-body p-5 text-center" style="border-radius: 1rem;">
  <%= form_for @message, :url => {:controller => 'messages', :action => 'update'} do |f| %>

<div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
<div class="container">
<div class="col sign-in card-title card-body text-alignment">
  <h2 class="fw-bold mb-2 text">Edit Question</h2>

<div class="form-group">
   <%= f.label :title %><br>
   <%= f.text_field :title, :class => "form-control form-control-lg"  %></div>

<div class="form-group">
   <%= f.label :question %><br>
   <%= f.text_field :question, :class => "form-control form-control-lg"  %></div>

<div class="actions">
   <%= f.submit class: "btn btn-outline-light btn-lg px-5" %>
 </div>

<% end %>
</div>

</div>
</div>

</div>
</div>

