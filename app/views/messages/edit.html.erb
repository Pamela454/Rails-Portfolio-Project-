<style>
  body {
  background-image: url('<%= asset_path 'camilo-jimenez-vGu08RYjO-s-unsplash.jpg' %>');
  background-size: cover;
  }
  .center {
    justify-content: center;
  }
  .navbar-custom {
    background-color: #D8DEEE;
    border: 0;
    padding: 0;
    margin: 0;
  }
  .sign-in {
    border: 0;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
    background-color: #D8DEEE;
  }
  .card-signin .card-title {
    margin-bottom: 2rem;
    font-weight: 300;
    font-size: 1.5rem;
  }
  .card-signin .card-body {
    padding: 2rem;
  }
</style>
<div class="text-center center font-weight-bold">
  <nav class="navbar navbar-custom sticky-top center font-weight-bold">
    <div class="page-header">
      <%= form_for @message, :url => {:controller => 'messages', :action => 'update'} do |f| %>
        <h2>Edit Question</h2>
      </div>
    </nav>
  </div>
  <br>
  <br>
  <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
    <div class="container">
      <table class="table table-striped">
        <thead>
          <tr>
            <div class="col sign-in card-title card-body">
              <div class="form-group">
                <%= f.label :title %><br>
                <%= f.text_field :title, :class => "span5" %></div>
              <br>
              <br>
              <div class="form-group">
                <%= f.label :question %><br>
                <%= f.text_field :question, :class => "span5" %></div>
              <br>
              <br>
              <div class="actions">
                <%= f.submit class: "btn btn-primary" %>
              </div>
              <br>
              <br>
            <% end %>
          </div>
        </table>
      </div>
    </div>
