<style>
  body {
  	    background-color: rgb(204, 229, 255) !important;
        background-repeat: no-repeat;
        margin-top: 275px;
    }
</style>
<div class="container-fluid welcome">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="col sign-in card-title card-body text-center">
        <h2 class="fw-bold mb-2 text">Questions Asked</h2>
        <% @messages.each do |m| %>
          <div class="row mt-3 justify-content-center">
            <h3>Title: <%= m.title %></h3>
            <h3>Body: <%= m.question %></h3>
            <h3>Categories: <% m.categories.each do |c| %>
                <%= c.category %>
              <% end %>
            </div>
          </h3>
        <%end%>
        <% if @messages == [] %>
          <div class="row mb-5 justify-content-center">
            <div class="card text-alignment" style="border-radius: 1rem; width: 100%">
              <div class="card-body">
                <p class="card-text">
                  <h3>None Available</h3>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
