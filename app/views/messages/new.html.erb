<style>
body {
	    background-color: rgb(204, 229, 255) !important;
      background-repeat: no-repeat;
  } 
</style>

<div class="container-fluid welcome">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card-body p-5 text-center">

<%= form_for @message, :url => {:controller => 'messages', :action => 'create'} do |f| %>
 <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">

     <div class="col sign-in card-title card-body">
      <h4 class="fw-bold mb-2 text">New Question</h4>

      <div class="field<%= ' field_with_errors' if @message.errors[:title].any? %>">
        <%= f.label :title %>
        <%= f.text_field :title, value: @message.title, :class => "form-control form-control-lg" %></div>

      <div class="field<%= ' field_with_errors' if @message.errors[:question].any? %>">   
        <%= f.label :question %>
        <%= f.text_field :question, value: @message.question, :class => "form-control form-control-lg" %></div>

      <div class="form-group">
        <%= f.hidden_field :user_id, value: current_user.id, :class => "form-control form-control-lg" %></div>

      <div class="form-group">
        <%= f.hidden_field :patient_id, value: current_user.id, :class => "form-control form-control-lg" %>
      </div>

      <div class="form-group">
       <div class="row mt-2 justify-content-center"> 
        <%= f.label :new_or_preexisting_condition%>
        </div>
       <div class="row mt-2 justify-content-center"> 
        <%= f.collection_check_boxes :category_ids, Category.all[0..1], :id, :category %>
        </div>
      </div>

      <div class="form-group">
      <div class="row mt-2 justify-content-center"> 
        <%= f.label :affected_system%>
      </div>
      <div class="row mt-2 justify-content-center"> 
        <%= f.collection_check_boxes :category_ids, Category.all[2..3], :id, :category %>
      </div>      
      <div class="row mt-2 justify-content-center"> 
        <%= f.collection_check_boxes :category_ids, Category.all[4..7], :id, :category %>
        </div>
      <div class="row mt-2 justify-content-center"> 
        <%= f.collection_check_boxes :category_ids, Category.all[8..11], :id, :category %>
        </div>
      </div>

    <div class="actions">
      <%= f.submit class: "btn btn-outline-light btn-lg px-5" %>
    </div>

    <% end %>
  </div>
  </div>
</div>
</div>
</div>
</div>
</div>
