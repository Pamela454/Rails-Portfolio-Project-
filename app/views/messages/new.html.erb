<style>
  body {
  background-image: url('<%= asset_path 'camilo-jimenez-vGu08RYjO-s-unsplash.jpg' %>');
  background-size: cover;
  }
  .center {
    justify-content: center;
  }
  .navbar-custom {
    background-color: #D8DEEE;
    border: 0;
    padding: 0;
    margin: 0;
  }
  .sign-in {
    border: 0;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
    background-color: #D8DEEE;
  }
  .card-signin .card-title {
    margin-bottom: 2rem;
    font-weight: 300;
    font-size: 1.5rem;
  }
  .card-signin .card-body {
    padding: 2rem;
  }
</style>

  <nav class="navbar navbar-custom sticky-top center font-weight-bold">
    <h2>New Question
    </h2>

  <div class="container">
   <div class="page-header">
  <%= form_with model: @message, url: user_messages_path, class: "form-control" do |f| %>
        <% if @message.errors.any? %>
          <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
              <% @message.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    </div>
  </nav>


<div class="container">
  <div class="container-fluid mx-auto text-nowrap text-dark" style="width: 500px;">
    <table class="table table-striped">
          <div class="col sign-in card-title card-body">

            <div class="field<%= ' field_with_errors' if @message.errors[:title].any? %>">
              <%= f.label :title %><br>
              <%= f.text_field :title, value: @message.title, class: "span5" %></div>
            <br>
            <br>
            <div class="field<%= ' field_with_errors' if @message.errors[:question].any? %>">
              <%= f.label :question %><br>
              <%= f.text_field :question, value: @message.question, class: "span5" %></div>
            <br>
            <br>
            <div class="form-group">
              <br>
              <%= f.hidden_field :patient_id, value: current_user.id, class: "form-control" %>
            </div>
            <br>
            <div class="form-group">
            <%= binding.pry %>
              <%= f.label :new_or_preexisting_condition%><br>
              <%= f.collection_check_boxes :category_ids, Category.all[0..1], :id, :category do |b| %>
              <div> 
              <%=b.label %>
              </div>
              <% end %>
            </div>
            <br> 
            <div class="form-group">
              <%= f.label :affected_system%><br>
              <%= f.collection_check_boxes :category_ids, Category.all[2..11], :id, :category do |b| %>
              <div>
              <%=b.check_box %>
              <%= b.label %>
              </div>
              <% end %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </table>
  </div>
</div>  
</div>
</div>
